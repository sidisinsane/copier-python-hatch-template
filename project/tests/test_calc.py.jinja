import pytest

from {{ python_package_import_name }}.calc import (
    add_numbers,
    average_numbers,
    subtract_numbers,
    multiply_numbers,
    divide_numbers,
)


def test_add():
    """Test the add_numbers function."""
    assert add_numbers(2, 3) == 5


@pytest.mark.parametrize(("x", "y", "expected"), [(0, 3, -3), (5, 3, 2)])
def test_subtract(x, y, expected):
    """Test the subtract_numbers function with multiple test cases."""
    assert subtract_numbers(x, y) == expected


@pytest.mark.parametrize(("x", "y", "expected"), [(3, 0, 0), (2, 3, 6)])
def test_multiply(x, y, expected):
    """Test the multiply_numbers function with multiple test cases."""
    assert multiply_numbers(x, y) == expected


def test_divide():
    """Test the divide_numbers function."""
    assert divide_numbers(6, 3) == 2.0
    with pytest.raises(ZeroDivisionError):
        divide_numbers(3, 0)


def test_average():
    """Test the average_numbers function."""
    assert average_numbers([90, 88, 99, 100]) == 94.25
